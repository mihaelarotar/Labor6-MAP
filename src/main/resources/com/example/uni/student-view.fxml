<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.uni.view.StudentView">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="notFoundText"/>

    <Label fx:id="message" text="Enter your ID"/>
    <TextField fx:id ="idStudent"/>
    <Button fx:id ="studentLogIn" text="LogIn" onAction="#loginStudent" />

    <Button fx:id = "totalCredits" text="Show credits" onAction="#showTotalCredits" visible="false"/>

    <Label fx:id="credits"/>
</VBox>
