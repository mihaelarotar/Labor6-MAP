<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.uni.view.TeacherView">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="message" text="What would you like to do?"/>

    <Label fx:id="course" text="Choose course"/>
    <TextField fx:id ="courseName"/>

    <Button fx:id = "showStudents" text="Show students enrolled on a course" onAction="#showEnrolledStudents"/>

    <Label fx:id="message2"/>

    <Button fx:id = "refresh" text="Refresh" onAction="#refreshPage"/>
</VBox>
