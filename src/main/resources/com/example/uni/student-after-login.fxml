<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.uni.view.StudentView">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="message" text="What would you like to do?"/>

    <Button fx:id = "totalCredits" text="Show credits" onAction="#showTotalCredits"/>

    <Label fx:id="credits"/>

    <Label fx:id="course" text="Choose course"/>
    <TextField fx:id ="courseName"/>

    <Button fx:id = "register" text="Register for course" onAction="#register"/>
    <Label fx:id="message2"/>
</VBox>
